{
  "manifest_version": 3,
  "name": "Folo Exporter",
  "version": "2.0",
  "description": "Export all unread articles from Folo (app.folo.is) to Markdown format via API.",
  "permissions": [
    "clipboardWrite",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.folo.is/*",
    "https://api.follow.is/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Folo Exporter"
  }
}
